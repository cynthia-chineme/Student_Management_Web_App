<!DOCTYPE html>
<html>
  <head>
    <title>Add Teaching Assistant | Student Management Web App</title>
    <meta charset="UTF-8" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" crossorigin="anonymous">
    <link rel="stylesheet" href="/CSS/theme.css">
  </head>
  <body>
    <%- include('partials/header') %>
    <div class="container">
      <main class="col-md-8 offset-md-2">
        <h1 class="mt-4 mb-4">Add a New Teaching Assistant</h1>
        <form method="post" action="/tas/add">
          <fieldset>
            <legend>TA Information</legend>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label>First Name:</label>
                  <input class="form-control" name="firstName" type="text" required />
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label>Last Name:</label>
                  <input class="form-control" name="lastName" type="text" required />
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="form-group">
                  <label>Email:</label>
                  <input class="form-control" name="email" type="email" required />
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-4">
                <div class="form-group">
                  <label>Address (Street):</label>
                  <input class="form-control" name="addressStreet" type="text" />
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <label>Address (City):</label>
                  <input class="form-control" name="addressCity" type="text" />
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <label>Address (Province):</label>
                  <input class="form-control" name="addressProvince" type="text" />
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label>Course:</label>
                  <input class="form-control" name="course" type="text" />
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label>TA:</label>
                  <input class="form-check-input" name="TA" type="checkbox" checked disabled />
                  <span class="ml-2">This person will be registered as a Teaching Assistant</span>
                </div>
              </div>
            </div>
            <button type="submit" class="btn btn-success">Add TA</button>
          </fieldset>
        </form>
      </main>
    </div>
    <%- include('partials/footer') %>
  </body>
</html>
